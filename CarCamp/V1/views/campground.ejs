<% include partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
        <h1>Welcome to this side of the hood!</h1>
        <p>View our hand picked places thats all over the country.... I think...</p>
        <p>
             <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
  </header>

<div class="row">
   <div class="col-lg-12">
       <h3>Our most popular sites</h3>
   </div>
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
                 <div class="thumbnail">
                      <img class="img-thumbnai" src="<%= campground.image %>">
                      <div class="caption">
                           <h4><%= campground.name %></h4>
                      </div>
                 </div>

             </div>
        <% }); %>
    </div>
</div>
