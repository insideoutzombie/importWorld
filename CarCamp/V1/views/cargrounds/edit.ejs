<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= carground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cargrounds/<%= carground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="carground[name]" value="<%= carground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="carground[image]" value="<%= carground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="carground[description]" value="<%= carground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/cargrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
